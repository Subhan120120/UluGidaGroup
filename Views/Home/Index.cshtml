                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Section End -->

<section class="parallax">
</section>

@section Styles{

    <style>
        html {
            scroll-behavior: smooth;
        }
    </style>
    <style>
        .parallax {
            height: 30%;
            background-image: url('/img/parallax.jpeg');
            background-attachment: fixed;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
    <style>
        #more {
            display: none
        }
    </style>
}

@section Scripts{
    <script>
        function read_more(readBtn) {

            var dots = readBtn.closest('.blog__item__text').querySelector('span#dots');
            var moretext = readBtn.closest('.blog__item__text').querySelector('span#more');

            if (dots.style.display === 'none') {
                dots.style.display = 'inline';
                moretext.style.display = 'none';
                readBtn.text = "daha fazla";
            }
            else {
                dots.style.display = 'none';
                moretext.style.display = 'inline';
                readBtn.text = "kısalt";
            }
            return false;
        }
    </script>
}